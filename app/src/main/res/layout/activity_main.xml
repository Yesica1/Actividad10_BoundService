<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Boton de iniciar el servicio, se enlaza con el método iniciarServicio-->
    <Button
        android:id="@+id/iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_20dp"
        android:text="@string/iniciar_servicio"
        android:onClick="iniciarServicio"/>

    <!--Boton de detener el servicio, se enlaza con el método detenerServicio-->
    <Button
        android:id="@+id/detener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iniciar"
        android:text="@string/detener_servicio"
        android:onClick="detenerServicio"/>

    <!--Boton de generacion de numero rándom, se enlaza con el método numeroRandom-->
    <Button
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detener"
        android:layout_marginTop="@dimen/margintop_20dp"
        android:text="@string/numero_random"
        android:onClick="numeroRandom"/>

</RelativeLayout>